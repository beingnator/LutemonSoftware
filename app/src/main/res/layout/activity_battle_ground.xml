<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3B1565C0"
    tools:context=".BattleGroundActivity">

    <Button
        android:id="@+id/btnStartBattle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:onClick="startBattle"
        android:text="TAISTELE!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtBattleStats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Taistelun eteneminen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="322dp" />

    <ImageView
        android:id="@+id/ivBattleLutemon1"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:srcCompat="@drawable/black_virus"
        tools:layout_editor_absoluteX="28dp"
        tools:layout_editor_absoluteY="67dp" />

    <ImageView
        android:id="@+id/ivBattleLutemon2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:srcCompat="@drawable/black_virus"
        tools:layout_editor_absoluteX="261dp"
        tools:layout_editor_absoluteY="67dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginHorizontal="10dp"
        android:text="TextView"
        tools:layout_editor_absoluteX="354dp"
        tools:layout_editor_absoluteY="362dp" />

</androidx.constraintlayout.widget.ConstraintLayout>