<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3B1565C0"
    tools:context=".BattleGroundActivity">

    <Button
        android:id="@+id/btnStartBattle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:onClick="startBattle"
        android:text="TAISTELE!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtBattleStats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:hint="Taistelun eteneminen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtLutemon1Action" />

    <ImageView
        android:id="@+id/ivBattleLutemon1"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toStartOf="@+id/ivLutemon1Action"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtLutemon1Health"
        app:srcCompat="@drawable/black_virus" />

    <ImageView
        android:id="@+id/ivBattleLutemon2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ivLutemon2Action"
        app:layout_constraintTop_toTopOf="@+id/ivLutemon2Action"
        app:srcCompat="@drawable/black_virus" />

    <TextView
        android:id="@+id/txtBattleLog"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="24dp"
        android:text="TextView"
        app:layout_constraintTop_toBottomOf="@+id/txtBattleStats"
        tools:layout_editor_absoluteX="9dp" />

    <ImageView
        android:id="@+id/ivLutemon1Action"
        android:layout_width="60dp"
        android:layout_height="120dp"
        app:layout_constraintEnd_toStartOf="@+id/ivLutemon2Action"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ivBattleLutemon1"
        app:layout_constraintTop_toTopOf="@+id/ivBattleLutemon1"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/ivLutemon2Action"
        android:layout_width="60dp"
        android:layout_height="120dp"
        app:layout_constraintEnd_toStartOf="@+id/ivBattleLutemon2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ivLutemon1Action"
        app:layout_constraintTop_toTopOf="@+id/ivLutemon1Action"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/txtLutemon1Action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/ivLutemon1Action"
        app:layout_constraintStart_toStartOf="@+id/ivLutemon1Action"
        app:layout_constraintTop_toBottomOf="@+id/ivLutemon1Action" />

    <TextView
        android:id="@+id/txtLutemon2Action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/ivLutemon2Action"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/ivLutemon2Action"
        app:layout_constraintTop_toBottomOf="@+id/ivLutemon2Action" />

    <TextView
        android:id="@+id/txtLutemon1Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/ivBattleLutemon1"
        app:layout_constraintStart_toStartOf="@+id/ivBattleLutemon1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtLutemon1Health"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/txtLutemon1Name"
        app:layout_constraintStart_toStartOf="@+id/txtLutemon1Name"
        app:layout_constraintTop_toBottomOf="@+id/txtLutemon1Name" />

    <TextView
        android:id="@+id/txtLutemon2Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/ivBattleLutemon2"
        app:layout_constraintStart_toStartOf="@+id/ivBattleLutemon2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtLutemon2Health"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/ivBattleLutemon2"
        app:layout_constraintStart_toStartOf="@+id/ivBattleLutemon2"
        app:layout_constraintTop_toBottomOf="@+id/txtLutemon2Name" />

</androidx.constraintlayout.widget.ConstraintLayout>